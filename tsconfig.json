{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "allowJs": true,
    "lib": [ "es5", "es2015.collection", "es2015.promise" ],
    "types": [ "node", "express", "compression" ],
    "skipDefaultLibCheck": true,
    "target": "es5",
    "outDir": "build"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}